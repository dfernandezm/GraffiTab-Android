<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#b2b2b2</item>

        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Base dialog application theme. -->
    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>

        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#b2b2b2</item>

        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <!-- Activity Dialog theme. -->
    <style name="DialogTheme" parent="AppTheme">

    </style>

    <!-- Activity Dialog theme. -->
    <style name="AllTimeDialogTheme" parent="AppThemeDialog">

    </style>

    <!-- ActionBar theme. -->
    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTextStyle</item>
    </style>

    <style name="ActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Base no actionbar theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#b2b2b2</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Base application transparent theme. -->
    <style name="AppThemeTransparentAction" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">#000</item>

        <item name="actionBarTheme">@style/ActionBarTransparentTheme</item>
        <item name="actionBarStyle">@style/ActionBarTransparentStyle</item>
    </style>

    <!-- ActionBar theme. -->
    <style name="ActionBarTransparentTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="ActionBarTransparentStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTransparentTextStyle</item>
    </style>

    <style name="ActionBarTransparentTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <!-- BottomSheet theme. -->
    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:textColorPrimary">@color/colorLightBlack</item>
        <item name="android:textColorSecondary">#a0a0a0</item>
    </style>
</resources>
