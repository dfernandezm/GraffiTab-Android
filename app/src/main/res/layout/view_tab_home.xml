<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tabIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/ic_home_black_24dp" />

    <View
        android:id="@+id/tabNotificationsIndicator"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_above="@+id/bottomMarginView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_tab_notification"
        android:visibility="invisible" />

    <!-- Dummy view because RelativeLayout cannot have marginBottom if we have alignParentBottom already set. -->
    <View
        android:id="@+id/bottomMarginView"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>