<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/permission_padding">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#555555"
                android:textSize="@dimen/permission_title_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/permission_image_margin_left"
                android:layout_marginRight="@dimen/permission_image_margin_right"
                android:layout_marginTop="@dimen/permission_image_margin_top"
                android:background="@drawable/rounded_corner_permission"
                android:padding="@dimen/permission_image_padding">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/permission_image_height"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:id="@+id/descriptionLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/permission_description_margin_bottom"
                android:layout_marginTop="@dimen/permission_description_margin_top"
                android:textColor="#232728"
                android:textSize="@dimen/permission_description_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_permission_action"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/accessBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#fff"
                    android:textSize="@dimen/permission_action_button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/permission_later_button_margin_top"
                android:background="@drawable/rounded_corner_permission_later"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/laterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/permissions_decide_later"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/permission_later_button_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>