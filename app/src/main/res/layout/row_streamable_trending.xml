<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <com.graffitab.ui.views.likeimageview.LikeImageView
            android:id="@+id/streamableView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#efefef"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/row_streamable_trending_metadata_padding"
            android:gravity="center_vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/row_streamable_trending_avatar_size"
                android:layout_height="@dimen/row_streamable_trending_avatar_size"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                app:riv_corner_radius="@dimen/row_streamable_trending_avatar_radius" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_streamable_trending_handle_margin_left"
                android:text="\@"
                android:textColor="#e0e0e0"
                android:textSize="@dimen/row_streamable_trending_handle_text_size" />

            <TextView
                android:id="@+id/usernameField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="georgi"
                android:textColor="#232728"
                android:textSize="@dimen/row_streamable_trending_username_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>